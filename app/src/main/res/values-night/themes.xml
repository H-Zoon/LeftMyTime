<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray800</item>
        <item name="colorPrimaryVariant">@color/gray400</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/nanum_square_round_r</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:timePickerStyle">@style/MyTimePickerDialogStyle</item>
    </style>

    <style name="ThemeOverlay.MyApplication.AppWidgetContainer" parent="">
        <item name="colorPrimary">@color/white</item>
        <item name="android:backgroundTint">#CC000000</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nanum_square_round_r</item>
    </style>

    <style name="Style.Color.Button" parent="">
        <item name="android:backgroundTint">@color/white</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="MyTimePickerDialogStyle" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:padding">40dp</item>
    </style>

    <style name="itemBackgroundTint" parent="">
        <item name="android:backgroundTint">@color/dark200</item>
    </style>

</resources>