<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray800</item>
        <item name="colorPrimaryVariant">@color/gray400</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/nanumsquareround</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogStyle</item>
    </style>

    <style name="ThemeOverlay.MyApplication.AppWidgetContainer" parent="">
        <item name="colorPrimary">@color/white</item>

        <item name="android:backgroundTint">#CC000000</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nanumsquareround</item>
    </style>

    <style name="Style.Color.Button" parent="">
        <item name="android:backgroundTint">@color/white</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="MyTimePickerDialogStyle" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:headerTimeTextAppearance">@style/TextAppearance.TimePickerDialogStyle.TimeLabel</item>
    </style>

    <style name="TextAppearance.TimePickerDialogStyle.TimeLabel" parent="android:style/TextAppearance.Material">
        <item name="android:textSize">60sp</item> <!-- from -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="background" parent="android:style/TextAppearance.Material">
        <item name="android:background">@color/black</item>
    </style>

</resources>