<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:title="기본설정"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:key="power_service"
            android:summary="TimeLeft의 알람 기능과 위젯 업데이트를 위해 배터리 최적화를 해제하여야 합니다."
            android:title="더 정확한 알림과 위젯활용"
            app:iconSpaceReserved="false"/>

        <ListPreference
            android:entries="@array/array_themes"
            android:entryValues="@array/array_themes"
            android:key="theme"
            android:summary="테마를 지정합니다."
            android:title="테마 선택하기"
            app:iconSpaceReserved="false" />

        <!--
        <ListPreference
            android:entries="@array/array_languages"
            android:entryValues="@array/array_languages"
            android:key="language"
            android:summary="언어를 선택합니다."
            android:title="언어 선택하기" />
            -->
    </PreferenceCategory>

    <PreferenceCategory
        android:title="알림"
        app:iconSpaceReserved="false">
        <SwitchPreference
            android:key="pause"
            android:summary="모든 알람이 일시중지됩니다."
            android:title="알림 일시중지"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="기타"
        app:iconSpaceReserved="false">
        <Preference
            android:title="어플리케이션 정보"
            app:fragment="com.devidea.timeleft.DescriptionFragment"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>
</PreferenceScreen>